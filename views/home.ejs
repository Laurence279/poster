<%- include('partials/header') %>

<div class="jumbotron container-fluid px-5">

  <div class="row">
  <div class="col-md-4 pr-md-5 text-center">
    <i class="fas fa-hands fa-7x"></i>
    <h1 class="display-3">Poster</h1>
    <p class="lead">Post something and introduce yourself</p>
  </div>

  <div class="col-md-8 mt-md-5 mx-0">
    <div id="scroll" class="post-container mt-3">
      <% posts.forEach(function(post){ %>
        <p class="secret-text"><a href="/profile/<%=`${post.poster}`%>"><%=`${post.poster}:`%></a>
          <%=`${post.content}`%></p>
      <% }) %>
  </div>
  <div class="text-center mb-2">
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Post</a>

  
  </div>

  </div>




</div>

</div>

<script>

function scrollToBottom(e){
  e.scrollTop = e.scrollHeight - e.getBoundingClientRect().height;
}

scrollToBottom(document.getElementById("scroll"));

</script>

