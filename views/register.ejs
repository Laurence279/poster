<%- include('partials/header') %>
<div class="container mt-5 w-50 py-5">
  <h1 class="text-center">Register</h1>

  <div class="row">
    <div class="col-sm-8 mx-auto">
      <div class="card p-3 border-dark" style="background-color: #DEE2E6;">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form autocomplete="off" action="/register" method="POST">
            <div class="form-group">
              <label for="text">Username</label>
              <input required type="text" autocomplete="off" class="form-control border-dark" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input required autocomplete="off" type="password" class="form-control border-dark" name="password">
            </div>
            <div class="form-group">
              <label for="email">Email (Not Required. Will only be used for password recovery)</label>
              <input autocomplete="off" type="email" class="form-control border-dark" name="email">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

