<%- include('partials/header') %>


<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-hands fa-7x"></i>
    <h1 class="display-3">Welcome to Rift World</h1>
    <p class="lead">Post something and introduce yourself</p>



    <% posts.forEach(function(post){ %>
      <p class="secret-text"><a href="/profile/<%=`${post.poster}`%>"><%= `${post.poster}` %></a>
        <%=`: ${post.content}`%></p>
    <% }) %>




    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Post</a>
  </div>
</div>

<%- include('partials/footer') %>
